<div class="content">
    <h1 class="post-label">Todos os posts</h1>

    {{#each posts}} 
    <div class="post">
        <h1 class="post-title"><a href="/post/{{_id}}">{{titulo}}</a></h1>
         {{#ifEqual role "owner"}}
            <p class="post-author">Escrito por <a href="/profile/{{_id}}" style="color: rgb(143, 7, 255);">{{usuario}}</a> | {{date}}</p>
        {{/ifEqual}}
        {{#ifEqual role "admin"}}
            <p class="post-author">Escrito por <a href="/profile/{{_id}}" style="color: rgb(255, 7, 110);">{{usuario}}</a> | {{date}}</p>
        {{/ifEqual}}
        {{#ifEqual role "member"}}
            <p class="post-author" id="user_name">Escrito por <a href="/profile/{{_id}}">{{usuario}}</a> | {{date}}</p> 
        {{/ifEqual}}

        <div class="post-content">{{conteudo}}</div>
    </div>
    {{/each}}
</div>