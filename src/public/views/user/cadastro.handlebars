<link rel="stylesheet" href="../../styles/styles.css">

{{#if error}}
<div class="popup-overlay">
    <div class="popup">
      <span class="close-button">&times;</span>
      <h2>Ocorreu um erro</h2>
      <p>{{error.msg}}</p>
    </div>
  </div>
{{/if}}

<div class="registro-container">
    <h1 class="registro-heading">Registro</h1>
    <form action="/auth/cadastro" method="post">
        <div class="registro-form-group">
            <label for="usuario" class="registro-label">Usu√°rio</label>
            <input type="text" name="usuario" id="usuario" class="registro-input" required>
        </div>

        <div class="registro-form-group">
            <label for="email" class="registro-label">Email</label>
            <input type="email" name="email" id="email" class="registro-input" required>
        </div>

        <div class="registro-form-group">
            <label for="password" class="registro-label">Senha</label>
            <input type="password" name="senha" id="password" class="registro-input" required>
        </div>

        <button type="submit" class="registro-button">Registrar</button>
            <h1 class="registro-heading"><a href="/auth/login">already have a account?</a></h1>
    </form>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const popupOverlay = document.querySelector('.popup-overlay');
    const closePopupButton = document.querySelector('.close-button');

    function closePopup() {
        popupOverlay.style.display = 'none';
    }

    closePopupButton.addEventListener('click', closePopup);

    popupOverlay.addEventListener('click', function(event) {
    if (event.target === popupOverlay) {
        closePopup();
    }
    });
});
</script>