<link rel="stylesheet" href="../../styles/styles.css">

{{#if error}}
<div class="popup-overlay">
    <div class="popup">
      <span class="close-button">&times;</span>
      <h2>Ocorreu um erro:</h2>
      <p>{{error.msg}}</p>
    </div>
  </div>
{{/if}}

<div class="login-container">
    <h1 class="login-heading">Login</h1>
    <form action="/auth/login" method="post">
        <div class="login-form-group">
            <label for="email" class="login-label">Email</label>
            <input type="email" name="email" id="email" class="login-input" required>
        </div>

        <div class="login-form-group">
            <label for="password" class="login-label">Senha</label>
            <input type="password" name="senha" id="password" class="login-input" required>
        </div>

        <button type="submit" class="login-button">Entrar</button>
        <h1 class="registro-heading"><a href="/auth/cadastro">new user?</a></h1>
    </form>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const popupOverlay = document.querySelector('.popup-overlay');
    const closePopupButton = document.querySelector('.close-button');

    function closePopup() {
        popupOverlay.style.display = 'none';
    }

    closePopupButton.addEventListener('click', closePopup);

    popupOverlay.addEventListener('click', function(event) {
    if (event.target === popupOverlay) {
        closePopup();
    }
    });
});
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>